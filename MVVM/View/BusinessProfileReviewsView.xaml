<UserControl x:Class="bussiness_social_media.MVVM.View.BusinessProfileReviewsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bussiness_social_media.MVVM.View" 
             xmlns:viewmodel="clr-namespace:bussiness_social_media.MVVM.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:BusinessProfileReviewsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#3A3A3A">

    <UserControl.Resources>
        <!-- Styles -->
    </UserControl.Resources>

    <Grid>

		<TabPanel>
			<Label Content="{Binding currentBusiness.Name}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="30"/>
			<Button Content="Posts"
					Height="25"
					Command="{Binding Path=NavigateToPostsCommand}"/>
			<Button Content="Reviews"
					Height="25"
					Command="{Binding Path=NavigateToReviewsCommand}"/>
			<Button Content="Contact"
                        Height="25"
                        Command="{Binding Path=NavigateToContactCommand}"/>
			<Button Content="About"
                        Height="25"
                        Command="{Binding Path=NavigateToAboutCommand}"/>
		</TabPanel>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Ellipse Width="100" Height="100">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="{Binding BusinessImage}" Stretch="UniformToFill"/>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock Text="Reviews"
                       Foreground="White"
                       FontSize="25"
                       Margin="0,10,0,15"/>

            <!-- Review List -->
            <ListBox ItemsSource="{Binding Reviews}"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Background="Transparent"
                     BorderBrush="Transparent"
                     Foreground="White"
                     Margin="0,0,0,15">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <!-- Review Item Template -->
                        <Border BorderBrush="White"
                                BorderThickness="0,0,0,1"
                                Padding="5"
                                Margin="0,0,0,5">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}"
                                           Foreground="White"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding Comment}"
                                           Foreground="White"/>
                                <TextBlock Text="{Binding Rating}"
                                           Foreground="White"/>
                                <!-- Add more fields as needed -->
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Review TextBox -->
            <TextBox Width="200"
                        Height="100" 
                        AcceptsReturn="True" 
                        TextWrapping="Wrap"
                        Text="{Binding ReviewDescription, Mode=TwoWay}"
                  ></TextBox>
            <!-- Leave Review Button -->
            <Button Content="Leave Review" 
                    Width="100"
                    Height="20"
                    Margin="0,10,0,10" 
                    Command="{Binding LeaveReviewCommand}"
        ></Button>
            <!-- Navigation Buttons -->
            <StackPanel Orientation="Horizontal">
                <Button Content="Posts"
                        Margin="0,0,10,0"
                        Command="{Binding NavigateToPostsCommand}"/>
                <Button Content="Reviews"
                        Margin="0,0,10,0"
                        Command="{Binding NavigateToReviewsCommand}"
                        IsEnabled="False"/>
                <Button Content="Contact"
                        Margin="0,0,10,0"
                        Command="{Binding NavigateToContactCommand}"/>
                <Button Content="About"
                        Command="{Binding NavigateToAboutCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
