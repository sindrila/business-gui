<UserControl x:Class="bussiness_social_media.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:bussiness_social_media.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="AliceBlue">
    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <TextBlock Text="Home"
                       Foreground="Plum"
                       FontSize="25"/>
            <Button Content="Create business"
                    Height="25"
                    Command="{Binding NavigateToCreateNewBusinessViewCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
