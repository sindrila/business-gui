<UserControl x:Class="bussiness_social_media.MVVM.View.BusinessProfileContactView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bussiness_social_media.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <TabPanel>
            <Label Content="{Binding currentBusiness.Name}" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Height="30"/>
            <Button Content="Posts"
                        Height="25"
                        Command="{Binding Path=NavigateToPostsCommand}"/>
            <Button Content="Reviews"
                        Height="25"
                        Command="{Binding Path=NavigateToReviewsCommand}"/>
            <Button Content="Contact"
                        Height="25"
                        Command="{Binding Path=NavigateToContactCommand}"/>
            <Button Content="About"
                        Height="25"
                        Command="{Binding Path=NavigateToAboutCommand}"/>
        </TabPanel>

        
    </Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Label Content="First Name" HorizontalAlignment="Left" Margin="510,10,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
                <Label Content="Email" HorizontalAlignment="Left" Margin="510,10,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Content="Last Name" HorizontalAlignment="Left" Margin="510,10,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
                <Label Content="Phone Number" HorizontalAlignment="Left" Margin="510,10,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
