<UserControl x:Class="bussiness_social_media.MVVM.View.BusinessProfileAboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bussiness_social_media.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#FFC0AAAA">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <TabPanel>
            <Label Content="{Binding currentBusiness.Name}" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Height="30"/>
            <Button Content="Posts"
                        Height="25"
                        Command="{Binding Path=NavigateToPostsCommand}"/>
            <Button Content="Reviews"
                        Height="25"
                        Command="{Binding Path=NavigateToReviewsCommand}"/>
            <Button Content="Contact"
                        Height="25"
                        Command="{Binding Path=NavigateToContactCommand}"/>
            <Button Content="About"
                        Height="25"
                        Command="{Binding Path=NavigateToAboutCommand}"/>
        </TabPanel>
        <Label Content="Phone&#xD;&#xA;" HorizontalAlignment="Left" Margin="510,10,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Label Content="Category&#xD;&#xA;" HorizontalAlignment="Left" Margin="510,65,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="510,120,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Label Content="Email&#xD;&#xA;" HorizontalAlignment="Left" Margin="510,175,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Label Content="Website" HorizontalAlignment="Left" Margin="510,230,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Label Content="Date of page creation" HorizontalAlignment="Left" Margin="510,285,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Label Name="PhoneLable"  Content="" HorizontalAlignment="Left" Margin="560,35,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Name="CategoryLable" Content="" HorizontalAlignment="Left" Margin="560,90,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Name="AddressLable" Content="" HorizontalAlignment="Left" Margin="560,145,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Name="EmailLable" Content="" HorizontalAlignment="Left" Margin="560,200,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Name="WebsiteLable" Content="" HorizontalAlignment="Left" Margin="560,255,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Name="CreationDateLable" Content="" HorizontalAlignment="Left" Margin="560,310,0,0" Grid.Row="1" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
